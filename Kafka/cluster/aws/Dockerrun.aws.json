{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "KAFKA_ADVERTISED_LISTENERS",
                    "value": "PLAINTEXT://ec2-13-115-115-229.ap-northeast-1.compute.amazonaws.com:9092"
                },
                {
                    "name": "KAFKA_ZOOKEEPER_CONNECT",
                    "value": "zookeeper:2181"
                },
                {
                    "name": "KAFKA_BROKER_ID",
                    "value": "1"
                },
                {
                    "name": "KAFKA_LOG4J_LOGGERS",
                    "value": "kafka.controller=INFO,kafka.producer.async.DefaultEventHandler=INFO,state.change.logger=INFO"
                },
                {
                    "name": "JAVA_OPTS",
                    "value": "-Xms128 -Xmx512m"
                },
                {
                    "name": "KAFKA_HEAP_OPTS",
                    "value": "-Xms128m -Xmx512m"
                }
            ],
            "essential": true,
            "image": "confluentinc/cp-kafka:5.0.0",
            "memory": 256,
            "name": "kafka",
            "hostname": "kafka",
            "links": [
                "zookeeper"
            ],
            "portMappings": [
                {
                    "containerPort": 9092,
                    "hostPort": 9092
                }
            ]
        },
        {
            "environment": [
                {
                    "name": "ZOO_MY_ID",
                    "value": "1"
                },
                {
                    "name": "ZOO_PORT",
                    "value": "2181"
                },
                {
                    "name": "ZOO_SERVERS",
                    "value": "server.1=0.0.0.0:2888:3888"
                }
            ],
            "essential": true,
            "image": "zookeeper:3.4.9",
            "memory": 128,
            "name": "zookeeper",
            "hostname": "zookeeper",
            "portMappings": [
                {
                    "containerPort": 2181,
                    "hostPort": 2181
                }
            ]
        }
    ],
    "family": "",
    "volumes": []
}
